{
  "manifest_version": 3,
  "name": "Surfing The Internet",
  "version": "0.1.0",
  "description": "custom brightness of the webpage, support exclude site and custom time.",
  "icons": {
    "16": "img/surf-32.png",
    "32": "img/surf-32.png",
    "48": "img/surf-32.png",
    "128": "img/surf-32.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background" : {
    "service_worker": "./js/serviceWorker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["./js/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "storage"
  ]
}
